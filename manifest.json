{
    "manifest_version": 2,

    "name": "Shorten Url",
    "description": "短網址外掛",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://ntust.me/"
    ],
    "web_accessible_resources": [
        "images/icon.png",
        "js/jquery-2.1.4.min.js"
    ],
    "content_security_policy": "script-src 'unsafe-eval' https://maps.googleapis.com/ https://maps.gstatic.com http://ntust.me; object-src 'self'"
}